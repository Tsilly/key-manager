.row
  .col-sm-12
    .page-header
    %h1
      = @category.title
      = link_to edit_category_path(@category) do
        %small
          %span.glyphicon.glyphicon-pencil{"aria-hidden" => "true"}
.row       
  = render 'breadscrumbs', category: @category
.row
  .col-sm-12
    = link_to categories_path do
      %p.pull-left
        %span.glyphicon.glyphicon-th-list{"aria-hidden" => "true"}
        Go to Categories List
    = link_to new_keychain_path do
      %p.pull-right
        %span.glyphicon.glyphicon-plus-sign{"aria-hidden" => "true"}
        Create A Keychain
.row
  .col-sm-12
    = render 'keychains/keychain_table', keychains: @category.keychains
  